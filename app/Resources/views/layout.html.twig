{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{% block title %}OCameo{% endblock %}</title>
    {% block stylesheets %} 
      <link rel="icon" type="image/png" href="{{ asset('bundles/rpcore/img/favicon.png') }}" />
      <link rel="stylesheet" href="{{ asset('bundles/rpcore/css/core_style.css') }}" type="text/css" />
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cosmo/bootstrap.min.css">
      <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
      <link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" rel="stylesheet">
      <link href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css" rel="stylesheet">
      <link rel='stylesheet' property='stylesheet' id='ta-portfolio-style-css'  href='{{ asset('bundles/rpcore/css/animate.css') }}' type='text/css' media='all' />
    {% endblock %} 
  </head> 
  <div class="navbar  navbar-fixed-top">
      <div id="nav"> 
        <div class="container">
         <div class="navbar-header"> 
            <a href="../" class="navbar-brand"><img src="{{ asset('bundles/rpcore/img/Logo.png') }}" class="brand-img"></a>
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="navbar-collapse collapse" id="navbar-main">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="{{ path('rp_core_homepage') }}" >Home</a></li>
              <li><a href="{{ path('rp_article_series') }}" >Series</a></li>
              <li><a href="{{ path('rp_article_animes') }}" >Animes</a></li>
              <li><a href="{{ path('rp_article_films') }}" >Films</a></li>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %} 
                  <li><a href="{{ path('rp_list_homepage') }}">Ma liste</a></li>
                  <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                  <li><a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-user"></i>    {{ app.user.username }}</a></li>
              {% else %}
                  <li><a href="{{ path('fos_user_registration_register') }}" >Inscription</a></li>
                  <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
  </div>

  <body>
    {% block body %}
    {% endblock %} 
  </body>  

  <footer>
    <div class="footer" id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                    <h3> Series </h3>
                    <ul>
                        <li> <a href="{{ path('rp_article_series') }}"> Nouveautés </a> </li>
                        <li> <a href="{{ path('rp_article_topseries') }}"> Le top </a> </li>
                        <li> <a href="{{ path('rp_list_homepage') }}"> Vos séries </a> </li>
                    </ul>
                </div>
                <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                    <h3> Animes </h3>
                    <ul>
                         <li> <a href="{{ path('rp_article_animes') }}"> Nouveautés </a> </li>
                        <li> <a href="{{ path('rp_article_topanimes') }}"> Le top </a> </li>
                        <li> <a href="{{ path('rp_list_homepage') }}"> Vos animes </a> </li>
                    </ul>
                </div>
                <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                    <h3> Films </h3>
                    <ul>
                        <li> <a href="{{ path('rp_article_films') }}"> Nouveautés </a> </li>
                        <li> <a href="{{ path('rp_article_topfilms') }}"> Le top </a> </li>
                        <li> <a href="{{ path('rp_list_homepage') }}"> Vos séries </a> </li>
                    </ul>
                </div> 
                <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                    <h3> Actualité </h3>
                    <ul>
                        <li> <a href="{{ path('rp_core_homepage') }}#banner"> Toute les actus </a> </li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %} 
                           <li> <a href="{{ path('fos_user_profile_show') }}"> Communauté </a> </li>
                        {% else %}
                            <li> <a href="{{ path('fos_user_registration_register') }}"> Communauté </a> </li>
                        {% endif %}
                        <li> <a href="#"> Contactez nous </a> </li>
                    </ul>
                </div>
                <div class="col-lg-3  col-md-3 col-sm-6 col-xs-12 ">
                    <h3> Suivez nous !  </h3>
                    <ul>
                        <li>
                       
                        </li>
                    </ul>
                    <ul class="social">
                        <li> <a href="#"> <i class=" fa fa-facebook">   </i> </a> </li>
                        <li> <a href="#"> <i class="fa fa-twitter">   </i> </a> </li>
                        <li> <a href="#"> <i class="fa fa-google-plus">   </i> </a> </li>
                        <li> <a href="#"> <i class="fa fa-pinterest">   </i> </a> </li>
                        <li> <a href="#"> <i class="fa fa-youtube">   </i> </a> </li>
                    </ul>
                </div>
            </div>
            <!--/.row-->
        </div>
        <!--/.container-->
    </div> 
    <!--/.footer-->
    <div class="footer-bottom">
        <div class="container">
            <p class="pull-left"> Copyright © Recap 2015. All right reserved. </p>
            <div class="pull-right">
            </div>
        </div>
    </div>
    <!--/.footer-bottom-->
  </footer> 

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>  
    <script src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>  
    <script src="{{ asset('bundles/rpcore/js/materialize.js') }}"></script>
    <script src="{{ asset('bundles/rpcore/js/init.js') }}"></script>
    <script src="{{ asset('bundles/rpcore/js/script.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
  {% endblock %}
</html>

